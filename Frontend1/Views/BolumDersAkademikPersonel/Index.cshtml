@using Core.Utilities.Results
@using Entity.Concrete
@using Entity.DTOs
@{
    ViewData["Title"] = "Bolum Ders AkademikPersonel Eşleşmesi";
    var bolumler = ViewData["Bolumler"] as IDataResult<List<Bolum>>;
    var dersler = ViewData["Dersler"] as IDataResult<List<Ders>>;
    var akademikPersoneller = ViewData["APler"] as IDataResult<List<AkademikPersonel>>;
    var bolumDersAkademikPersonelEslestirmeleri = ViewData["BDAP"] as IDataResult<List<DersBolumAkademikPersonelDTO>>;
}

<style>
    .selected-row {
        background-color: #007bff; /* Mavi */
        color: white; /* Yazı rengini beyaz yapar */
    }

    .table-container {
        height: 200px;
        overflow-y: auto;
        margin-bottom: 20px;
    }

    .table-container table {
        margin-bottom: 0;
    }

    .table-container thead th {
        position: sticky;
        top: 0;
        background-color: #f8f9fa;
        z-index: 1;
    }

    .right-table {
        height: calc(100vh - 120px);
        margin-bottom: 20px;
    }

    .right-table .table-responsive {
        height: calc(100vh - 170px);
        overflow-y: auto;
        border: 1px solid #dee2e6;
        border-radius: 4px;
    }

    .right-table table {
        margin-bottom: 0;
        width: 100%;
    }

    .right-table thead th {
        position: sticky;
        top: 0;
        background-color: #f8f9fa;
        z-index: 1;
        border-bottom: 2px solid #dee2e6;
    }

    /* Yatay scroll için */
    .right-table .table-responsive {
        overflow-x: auto;
    }

    .right-table tbody {
        background-color: white;
    }

    /* Tüm tablolar için ortak özellikler */
    .table thead th {
        background-color: #f8f9fa;
        border-bottom: 2px solid #dee2e6;
        font-weight: 500;
    }

    .table tbody tr:hover {
        background-color: rgba(0,123,255,0.05);
    }
</style>

<div class="container-fluid mt-4">
    <div class="row">
        <!-- Sol kısım -->
        <div class="col-4 border-end">
            <!-- Bölüm Tablosu -->
            <div class="mb-4">
                <h5>Bölüm Tablosu</h5>
                <div class="table-container">
                    <table class="table table-bordered" id="bolumTable">
                        <thead class="table-light">
                            <tr>
                                <th>Id</th>
                                <th>Ad</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var bolum in bolumler.Data)
                            {
                                <tr data-type="bolum">
                                    <td>@bolum.Id</td>
                                    <td>@bolum.Ad</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
            <!-- Ders Tablosu -->
            <div class="mb-4">
                <h5>Ders Tablosu</h5>
                <div class="table-container">
                    <table class="table table-bordered" id="dersTable">
                        <thead class="table-light">
                            <tr>
                                <th>Id</th>
                                <th>Ad</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var ders in dersler.Data)
                            {
                                <tr data-type="ders">
                                    <td>@ders.Id</td>
                                    <td>@ders.Ad</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
            <!-- Akademik Personel Tablosu -->
            <div>
                <h5>Akademik Personel Tablosu</h5>
                <div class="table-container">
                    <table class="table table-bordered" id="personelTable">
                        <thead class="table-light">
                            <tr>
                                <th>Id</th>
                                <th>Ad</th>
                                <th>Unvan</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var aPersonel in akademikPersoneller.Data)
                            {
                                <tr data-type="akademikPersonel">
                                    <td>@aPersonel.Id</td>
                                    <td>@aPersonel.Ad</td>
                                    <td>@aPersonel.Unvan</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <!-- Sağ kısım -->
        <div class="col-8">
            <div class="right-table">
                <div class="table-responsive">
                    <table class="table table-bordered">
                        <thead class="table-light">
                            <tr>
                                <th>Bölüm</th>
                                <th>Ders</th>
                                <th>Akademik Personel</th>
                                <th>İşlemler</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr id="singleRow" style="display: none;">
                                <td></td>
                                <td></td>
                                <td></td>
                                <td></td>
                                <td>
                                    <button id="saveButton" class="btn btn-primary btn-sm" disabled>Kaydet</button>
                                </td>
                            </tr>
                            @foreach (var item in bolumDersAkademikPersonelEslestirmeleri.Data)
                            {
                                <tr>
                                    <td>@item.Id</td>
                                    <td>@item.BolumAd</td>
                                    <td>@item.DersAd</td>
                                    <td>@item.AkademikPersonelAd</td>
                                    <td>
                                        <button class="btn btn-danger btn-sm">Sil</button>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="~/js/component-bdap.js"></script>