@using Core.Utilities.Results
@using Entity.Concrete
@using Entity.DTOs
@{
    ViewData["Title"] = "Bolum Ders AkademikPersonel Eşleşmesi";
    var bolumler = ViewData["Bolumler"] as IDataResult<List<Bolum>>;
    var dersler = ViewData["Dersler"] as IDataResult<List<Ders>>;
    var akademikPersoneller = ViewData["APler"] as IDataResult<List<AkademikPersonel>>;
    var bolumDersAkademikPersonelEslestirmeleri = ViewData["BDAP"] as IDataResult<List<DersBolumAkademikPersonelDTO>>;
}

<!-- BDAP özel CSS dosyasını ekle -->
<link rel="stylesheet" href="~/css/bdap.css" />

<style>
    .selected-row {
        background-color: #007bff; /* Mavi */
        color: white; /* Yazı rengini beyaz yapar */
    }
</style>

<div class="container-fluid mt-4">
    <div class="row">
        <!-- Sol kısım -->
        <div class="col-4 border-end d-flex flex-column" style="height: calc(100vh - 60px);">
            <!-- Bölüm Tablosu -->
            <div class="table-container mb-2">
                <h5>Bölüm Tablosu</h5>
                <div class="table-wrapper">
                    <table class="table table-bordered" id="bolumTable">
                        <thead class="table-light">
                            <tr>
                                <th>Id</th>
                                <th>Ad</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var bolum in bolumler.Data)
                            {
                                <tr data-type="bolum" data-id="@bolum.Id">
                                    <td>@bolum.Id</td>
                                    <td>@bolum.Ad</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
            <!-- Ders Tablosu -->
            <div class="table-container mb-2">
                <h5>Ders Tablosu</h5>
                <div class="table-wrapper">
                    <table class="table table-bordered" id="dersTable">
                        <thead class="table-light">
                            <tr>
                                <th>Id</th>
                                <th>Ad</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var ders in dersler.Data)
                            {
                                <tr data-type="ders" data-id="@ders.Id">
                                    <td>@ders.Id</td>
                                    <td>@ders.Ad</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
            <!-- Akademik Personel Tablosu -->
            <div class="table-container">
                <h5>Akademik Personel Tablosu</h5>
                <div class="table-wrapper">
                    <table class="table table-bordered" id="personelTable">
                        <thead class="table-light">
                            <tr>
                                <th>Id</th>
                                <th>Ad</th>
                                <th>Unvan</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var aPersonel in akademikPersoneller.Data)
                            {
                                <tr data-type="akademikPersonel" data-id="@aPersonel.Id">
                                    <td>@aPersonel.Id</td>
                                    <td>@aPersonel.Ad</td>
                                    <td>@aPersonel.Unvan</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <!-- Sağ kısım -->
        <div class="col-8 d-flex flex-column">
            <div class="flex-grow-1 overflow-auto">
                <table id="bdapTable" class="table table-bordered table-hover">
                    <thead class="table-light">
                        <tr>
                            <th>Bölüm</th>
                            <th>Ders</th>
                            <th>Akademik Personel</th>
                            <th>İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr id="singleRow" style="display: none;">
                            <td></td>
                            <td></td>
                            <td></td>
                            <td>
                                <button id="saveButton" class="btn btn-primary btn-sm" disabled>Kaydet</button>
                            </td>
                        </tr>
                        @foreach (var item in bolumDersAkademikPersonelEslestirmeleri.Data)
                        {
                            <tr data-id="@item.Id">
                                <td>@item.BolumAd</td>
                                <td>@item.DersAd</td>
                                <td>@item.AkademikPersonelAd (@item.Unvan)</td>
                                <td class="text-center">
                                    <button class="btn btn-sm btn-danger delete-btn" onclick='handleDelete(@Html.Raw(Json.Serialize(item)))'>
                                        <i class="fas fa-trash"></i>
                                        Sil
                                    </button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="~/js/component-bdap.js"></script>