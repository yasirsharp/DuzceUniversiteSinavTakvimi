@model List<Entity.Concrete.Bolum>

<div class="container-fluid">
    <button class="btn btn-primary ekle-btn" onclick="showAddModal()">
        <i class="bi bi-plus-circle me-2"></i>Yeni Bölüm Ekle
    </button>

    <div class="table-responsive">
        <table class="table">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Bölüm Adı</th>
                    <th>İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var bolum in Model)
                {
                    <tr>
                        <td data-label="ID">@bolum.Id</td>
                        <td data-label="Bölüm Adı">@bolum.Ad</td>
                        <td>
                            <div class="btn-group">
                                <button class="btn btn-warning" onclick="showEditModal(@bolum.Id, '@bolum.Ad')">
                                    <i class="bi bi-pencil me-1"></i>Düzenle
                                </button>
                                <button class="btn btn-danger" onclick="showDeleteModal(@bolum.Id)">
                                    <i class="bi bi-trash me-1"></i>Sil
                                </button>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<!-- Modal kodları aynı kalacak --> 