@model IEnumerable<Entity.Concrete.Derslik>

@{
    ViewData["Title"] = "Derslik Yönetimi";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">Derslik Listesi</h3>
                    <div class="card-tools">
                        <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#derslikModal">
                            Yeni Derslik Ekle
                        </button>
                    </div>
                </div>
                <div class="card-body">
                    <table id="derslikTable" class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Derslik Adı</th>
                                <th>Kapasite</th>
                                <th>İşlemler</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var derslik in Model)
                            {
                                <tr>
                                    <td>@derslik.Id</td>
                                    <td>@derslik.Ad</td>
                                    <td>@derslik.Kapasite</td>
                                    <td>
                                        <button class="btn btn-sm btn-info edit-derslik" data-id="@derslik.Id">Düzenle</button>
                                        <button class="btn btn-sm btn-danger delete-derslik" data-id="@derslik.Id">Sil</button>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Derslik Modal -->
<div class="modal fade" id="derslikModal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Derslik</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form id="derslikForm">
                    <input type="hidden" id="derslikId" />
                    <div class="form-group">
                        <label for="derslikAd">Derslik Adı</label>
                        <input type="text" class="form-control" id="derslikAd" required>
                    </div>
                    <div class="form-group">
                        <label for="derslikKapasite">Kapasite</label>
                        <input type="number" class="form-control" id="derslikKapasite" required min="1">
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">İptal</button>
                <button type="button" class="btn btn-primary" id="saveDerslik">Kaydet</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            // DataTable initialization
            $('#derslikTable').DataTable({
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/1.10.24/i18n/Turkish.json"
                }
            });

            // Yeni derslik ekleme
            $('#saveDerslik').click(function () {
                var derslik = {
                    Id: $('#derslikId').val(),
                    Ad: $('#derslikAd').val(),
                    Kapasite: parseInt($('#derslikKapasite').val())
                };

                var url = derslik.Id ? '/Derslik/Update' : '/Derslik/Add';
                var method = derslik.Id ? 'PUT' : 'POST';

                $.ajax({
                    url: url,
                    type: method,
                    contentType: 'application/json',
                    data: JSON.stringify(derslik),
                    success: function (response) {
                        if (response.success) {
                            location.reload();
                        } else {
                            alert('Hata: ' + response.message);
                        }
                    },
                    error: function (xhr) {
                        alert('Bir hata oluştu: ' + xhr.responseText);
                    }
                });
            });

            // Derslik düzenleme
            $('.edit-derslik').click(function () {
                var id = $(this).data('id');
                $.get('/Derslik/GetById/' + id, function (derslik) {
                    $('#derslikId').val(derslik.id);
                    $('#derslikAd').val(derslik.ad);
                    $('#derslikKapasite').val(derslik.kapasite);
                    $('#derslikModal').modal('show');
                });
            });

            // Derslik silme
            $('.delete-derslik').click(function () {
                if (confirm('Bu dersliği silmek istediğinizden emin misiniz?')) {
                    var id = $(this).data('id');
                    $.ajax({
                        url: '/Derslik/Delete',
                        type: 'POST',
                        contentType: 'application/json',
                        data: JSON.stringify({ Id: id }),
                        success: function (response) {
                            if (response.success) {
                                location.reload();
                            } else {
                                alert('Hata: ' + response.message);
                            }
                        },
                        error: function (xhr) {
                            alert('Bir hata oluştu: ' + xhr.responseText);
                        }
                    });
                }
            });

            // Modal kapandığında formu temizle
            $('#derslikModal').on('hidden.bs.modal', function () {
                $('#derslikForm')[0].reset();
                $('#derslikId').val('');
            });
        });
    </script>
}
