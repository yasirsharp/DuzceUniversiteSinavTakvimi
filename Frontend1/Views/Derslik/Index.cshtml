@using Business.Concrete
@using DataAccess.Concrete

@{
    ViewData["Title"] = "Derslik Yönetimi";
    DerslikManager derslikManager = new DerslikManager(new DerslikDal());
    var list = derslikManager.GetList();
    void getAllBolum()
    {
        foreach (var item in list)
        {
            <tbody class="table-group-divider">
                <tr>
                    <th scope="row">@item.Id</th>
                    <td>@item.Ad</td>
                    <td>@item.Kapasite</td>
                    <td>
                        <button class="btn btn-warning btn-sm edit-btn" data-id="@item.Id" data-name="@item.Ad">Düzenle</button>
                        <button class="btn btn-danger btn-sm delete-btn" data-id="@item.Id">Sil</button>
                    </td>
                </tr>
            </tbody>
        }
    }
}
<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center">
        <h2>@ViewData["Title"]</h2>
        <button id="addRowBtn" type="button" class="btn btn-secondary">Ekle</button>
    </div>
    <table class="table table-bordered mt-3" id="dataTable">
        <thead class="table-light">
            <tr>
                <th style="width: 20%;">Id</th>
                <th>Derslik Adı</th>
                <th>Derslik Kapasitesi</th>
                <th>İşlem</th>
            </tr>
        </thead>
        @{
            getAllBolum();
        }
        <tbody class="table-group-divider" style="display: none;" id="inputRow">
            <tr>
                <th scope="row"></th>
                <td>
                    <input type="text" id="ad" class="form-control" />
                </td>
                <td>
                    <input type="text" id="kapasite" class="form-control" />
                </td>
                <td>
                    <button class="btn btn-secondary" id="submitBtn">
                        + Ekle
                    </button>
                </td>
            </tr>
        </tbody>
    </table>
</div>
<!-- Toast container -->
<div aria-live="polite" aria-atomic="true" class="position-fixed bottom-0 end-0 p-3">
    <div id="toast-container">
        <!-- Toast items will be added here dynamically -->
    </div>
</div>

@section Scripts {
    <script src="~/js/components.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            // Sayfanın türüne göre entityName'i belirliyoruz
            const entityName = 'Derslik'; // Bu sayfa için 'Derslik' nesnesi

            initializeDeleteButtons(entityName);
            initializeAddButton(entityName);
            initializeEditButtons(entityName);
        });
    </script>
}lik