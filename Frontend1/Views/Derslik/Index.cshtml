@using Entity.Concrete
@model List<Derslik>

@{
    ViewData["Title"] = "Derslik Yönetimi";
}

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center">
        <h2>@ViewData["Title"]</h2>
        <button id="addRowBtn" type="button" class="btn btn-secondary">
            <i class="bi bi-plus-lg"></i> Yeni Derslik
        </button>
    </div>
    <table class="table table-bordered mt-3" id="dataTable">
        <thead class="table-light">
            <tr>
                <th style="width: 10%;">Id</th>
                <th style="width: 45%;">Derslik Adı</th>
                <th style="width: 20%;">Kapasite</th>
                <th style="width: 25%;">İşlem</th>
            </tr>
        </thead>
        <tbody id="tableBody">
            @foreach (var item in Model)
            {
                <tr data-id="@item.Id">
                    <th scope="row">@item.Id</th>
                    <td>@item.Ad</td>
                    <td>@item.Kapasite</td>
                    <td>
                        <button class="btn btn-warning btn-sm" onclick="handleEdit(@item.Id, this.closest('tr'))">
                            <i class="bi bi-pencil-square"></i>
                        </button>
                        <button class="btn btn-danger btn-sm" onclick="handleDelete(@item.Id, '@item.Ad', '@item.Kapasite')">
                            <i class="bi bi-trash"></i>
                        </button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section Scripts {
    <script src="~/js/component-derslik.js"></script>
}
