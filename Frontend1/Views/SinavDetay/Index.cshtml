@using Core.Utilities.Results
@using Entity.Concrete
@using Entity.DTOs
@using Microsoft.AspNetCore.Html
@{
    ViewData["Title"] = "Sınav Detay Yönetimi";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">Sınav Listesi</h3>
                    <div class="card-tools">
                        <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#sinavModal">
                            Yeni Sınav Ekle
                        </button>
                    </div>
                </div>
                <div class="card-body">
                    <table id="sinavTable" class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Bölüm</th>
                                <th>Ders</th>
                                <th>Akademik Personel</th>
                                <th>Sınav Tarihi</th>
                                <th>Başlangıç Saati</th>
                                <th>Bitiş Saati</th>
                                <th>Derslikler</th>
                                <th>İşlemler</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in ViewData["SinavDetay"] as IEnumerable<Entity.DTOs.SinavDetayDTO>)
                            {
                                <tr>
                                    <td>@item.Id</td>
                                    <td>@item.BolumAd</td>
                                    <td>@item.DersAd</td>
                                    <td>@item.AkademikPersonelAd (@item.Unvan)</td>
                                    <td>@item.SinavTarihi.ToString("dd.MM.yyyy")</td>
                                    <td>@item.SinavBaslangicSaati.ToString("HH:mm")</td>
                                    <td>@item.SinavBitisSaati.ToString("HH:mm")</td>
                                    <td>
                                        <button class="btn btn-sm btn-info view-derslikler" data-id="@item.Id">
                                            Derslikleri Görüntüle
                                        </button>
                                    </td>
                                    <td>
                                        <button class="btn btn-sm btn-info edit-sinav" data-id="@item.Id">Düzenle</button>
                                        <button class="btn btn-sm btn-danger delete-sinav" data-id="@item.Id">Sil</button>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Sınav Modal -->
<div class="modal fade" id="sinavModal" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Sınav Detayı</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form id="sinavForm">
                    <input type="hidden" id="sinavId" />
                    <div class="form-group">
                        <label for="dbapId">Bölüm-Ders-Akademik Personel</label>
                        <select class="form-control" id="dbapId" required>
                            <option value="">Seçiniz</option>
                            @foreach (var item in ViewData["DBAPDetail"] as IEnumerable<Entity.DTOs.DersBolumAkademikPersonelDTO>)
                            {
                                <option value="@item.Id">@item.BolumAd - @item.DersAd (@item.AkademikPersonelAd)</option>
                            }
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="sinavTarihi">Sınav Tarihi</label>
                        <input type="date" class="form-control" id="sinavTarihi" required>
                    </div>
                    <div class="form-group">
                        <label for="sinavBaslangicSaati">Başlangıç Saati</label>
                        <input type="time" class="form-control" id="sinavBaslangicSaati" required>
                    </div>
                    <div class="form-group">
                        <label for="sinavBitisSaati">Bitiş Saati</label>
                        <input type="time" class="form-control" id="sinavBitisSaati" required>
                    </div>
                    <div class="form-group">
                        <label>Derslikler ve Gözetmenler</label>
                        <div id="derslikContainer">
                            <div class="derslik-row mb-2">
                                <div class="row">
                                    <div class="col-md-6">
                                        <select class="form-control derslik-select" required>
                                            <option value="">Derslik Seçiniz</option>
                                            @foreach (var derslik in ViewData["Derslikler"] as IEnumerable<Entity.Concrete.Derslik>)
                                            {
                                                <option value="@derslik.Id">@derslik.Ad (Kapasite: @derslik.Kapasite)</option>
                                            }
                                        </select>
                                    </div>
                                    <div class="col-md-6">
                                        <select class="form-control gozetmen-select" required>
                                            <option value="">Gözetmen Seçiniz</option>
                                            @foreach (var personel in ViewData["AkademikPersoneller"] as IEnumerable<Entity.Concrete.AkademikPersonel>)
                                            {
                                                <option value="@personel.Id">@personel.Ad (@personel.Unvan)</option>
                                            }
                                        </select>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <button type="button" class="btn btn-secondary btn-sm" id="addDerslik">Derslik Ekle</button>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">İptal</button>
                <button type="button" class="btn btn-primary" id="saveSinav">Kaydet</button>
            </div>
        </div>
    </div>
</div>

<!-- Derslikler Modal -->
<div class="modal fade" id="dersliklerModal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Derslikler ve Gözetmenler</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>Derslik</th>
                            <th>Gözetmen</th>
                        </tr>
                    </thead>
                    <tbody id="dersliklerTableBody">
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            // DataTable initialization
            $('#sinavTable').DataTable({
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/1.10.24/i18n/Turkish.json"
                }
            });

            // Derslik ekleme butonu
            $('#addDerslik').click(function () {
                var newRow = $('.derslik-row:first').clone();
                newRow.find('select').val('');
                newRow.find('.remove-derslik').remove();
                newRow.append('<div class="col-md-12 mt-2"><button type="button" class="btn btn-danger btn-sm remove-derslik">Kaldır</button></div>');
                $('#derslikContainer').append(newRow);
            });

            // Derslik kaldırma
            $(document).on('click', '.remove-derslik', function () {
                $(this).closest('.derslik-row').remove();
            });

            // Yeni sınav ekleme
            $('#saveSinav').click(function () {
                var derslikler = [];
                $('.derslik-row').each(function () {
                    var derslikId = $(this).find('.derslik-select').val();
                    var gozetmenId = $(this).find('.gozetmen-select').val();
                    if (derslikId && gozetmenId) {
                        derslikler.push({
                            DerslikId: parseInt(derslikId),
                            GozetmenId: parseInt(gozetmenId)
                        });
                    }
                });

                var sinav = {
                    Id: $('#sinavId').val(),
                    DerBolumAkademikPersonelId: $('#dbapId').val(),
                    SinavTarihi: $('#sinavTarihi').val(),
                    SinavBaslangicSaati: $('#sinavBaslangicSaati').val(),
                    SinavBitisSaati: $('#sinavBitisSaati').val(),
                    Derslikler: derslikler
                };

                var url = sinav.Id ? '/SinavDetay/Update' : '/SinavDetay/Add';
                var method = sinav.Id ? 'PUT' : 'POST';

                $.ajax({
                    url: url,
                    type: method,
                    contentType: 'application/json',
                    data: JSON.stringify(sinav),
                    success: function (response) {
                        if (response.success) {
                            location.reload();
                        } else {
                            alert('Hata: ' + response.message);
                        }
                    },
                    error: function (xhr) {
                        alert('Bir hata oluştu: ' + xhr.responseText);
                    }
                });
            });

            // Derslikleri görüntüleme
            $('.view-derslikler').click(function () {
                var id = $(this).data('id');
                $.get('/SinavDetay/GetSinavDerslikler/' + id, function (response) {
                    if (response.success) {
                        var html = '';
                        response.data.forEach(function (item) {
                            html += '<tr><td>' + item.derslikAd + '</td><td>' + item.gozetmenAd + '</td></tr>';
                        });
                        $('#dersliklerTableBody').html(html);
                        $('#dersliklerModal').modal('show');
                    } else {
                        alert('Hata: ' + response.message);
                    }
                });
            });

            // Sınav düzenleme
            $('.edit-sinav').click(function () {
                var id = $(this).data('id');
                $.get('/SinavDetay/GetById/' + id, function (sinav) {
                    $('#sinavId').val(sinav.id);
                    $('#dbapId').val(sinav.derBolumAkademikPersonelId);
                    $('#sinavTarihi').val(sinav.sinavTarihi.split('T')[0]);
                    $('#sinavBaslangicSaati').val(sinav.sinavBaslangicSaati);
                    $('#sinavBitisSaati').val(sinav.sinavBitisSaati);

                    // Derslikleri temizle
                    $('#derslikContainer').empty();

                    // Derslikleri ekle
                    $.get('/SinavDetay/GetSinavDerslikler/' + id, function (response) {
                        if (response.success) {
                            response.data.forEach(function (item) {
                                var newRow = $('.derslik-row:first').clone();
                                newRow.find('.derslik-select').val(item.derslikId);
                                newRow.find('.gozetmen-select').val(item.gozetmenId);
                                newRow.find('.remove-derslik').remove();
                                newRow.append('<div class="col-md-12 mt-2"><button type="button" class="btn btn-danger btn-sm remove-derslik">Kaldır</button></div>');
                                $('#derslikContainer').append(newRow);
                            });
                        }
                    });

                    $('#sinavModal').modal('show');
                });
            });

            // Sınav silme
            $('.delete-sinav').click(function () {
                if (confirm('Bu sınavı silmek istediğinizden emin misiniz?')) {
                    var id = $(this).data('id');
                    $.ajax({
                        url: '/SinavDetay/Delete',
                        type: 'POST',
                        contentType: 'application/json',
                        data: JSON.stringify({ Id: id }),
                        success: function (response) {
                            if (response.success) {
                                location.reload();
                            } else {
                                alert('Hata: ' + response.message);
                            }
                        },
                        error: function (xhr) {
                            alert('Bir hata oluştu: ' + xhr.responseText);
                        }
                    });
                }
            });

            // Modal kapandığında formu temizle
            $('#sinavModal').on('hidden.bs.modal', function () {
                $('#sinavForm')[0].reset();
                $('#sinavId').val('');
                $('#derslikContainer').empty();
                var newRow = $('.derslik-row:first').clone();
                newRow.find('select').val('');
                newRow.find('.remove-derslik').remove();
                $('#derslikContainer').append(newRow);
            });
        });
    </script>
}
