@using Entity.Concrete
@model List<Bolum>

@{
    ViewData["Title"] = "Görevli Sınav Yönetimi";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">Görevli Olduğunuz Bölümler</h3>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-bordered table-striped">
                            <thead>
                                <tr>
                                    <th>Bölüm Adı</th>
                                    <th>İşlemler</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var bolum in Model)
                                {
                                    <tr>
                                        <td>@bolum.Ad</td>
                                        <td>
                                            <a href="~/sinavdetay/@bolum.Id" 
                                               class="btn btn-primary">
                                                <i class="fas fa-calendar"></i> Takvime Git
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div id="sinav-listesi" class="sinav-container" style="display: none;">
    <h3>Sınavlar</h3>
    <ul id="sinavlar"></ul>
</div>

<style>
    .bolum-container {
        display: flex;
        gap: 15px;
        flex-wrap: wrap;
        justify-content: center;
        padding: 20px;
    }

    .bolum-card {
        background: #f8f9fa;
        border: 2px solid #6c757d;
        border-radius: 12px;
        padding: 15px 20px;
        min-width: 200px;
        text-align: center;
        cursor: pointer;
        transition: 0.3s;
        box-shadow: 2px 2px 10px rgba(0, 0, 0, 0.1);
    }

        .bolum-card:hover {
            background: #e9ecef;
            transform: scale(1.05);
        }

    .sinav-container {
        margin-top: 20px;
        padding: 15px;
        border: 1px solid #ddd;
        border-radius: 10px;
        background: #fff;
        box-shadow: 2px 2px 10px rgba(0, 0, 0, 0.1);
        width: 50%;
        margin-left: auto;
        margin-right: auto;
    }
</style>

<script>
    document.addEventListener("DOMContentLoaded", function () {
        document.querySelectorAll(".bolum-card").forEach(card => {
            card.addEventListener("click", function () {
                let bolumId = this.getAttribute("data-bolum-id");
                window.location.href = `sinavdetay/${bolumId}`;
            });
        });
    });
</script>
